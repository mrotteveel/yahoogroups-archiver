<!DOCTYPE html>
<html lang="{{site.lang}}">
<head>
    {{~#eq site.useAbsolutePaths 'true'~}}
        {{~#assign "siteRoot"}}{{site.baseUrl}}{{/assign~}}
        {{~#assign "groupRoot"}}{{siteRoot}}{{groupName}}/{{/assign~}}
        {{~#assign "yearRoot"}}{{groupRoot}}{{yearMonth.year}}/{{/assign~}}
        {{~#assign "monthRoot"}}{{yearRoot}}{{yearMonth.month}}/{{/assign~}}
    {{~else~}}
        {{~#assign "siteRoot"}}../../../{{/assign~}}
        {{~#assign "groupRoot"}}../../{{/assign~}}
        {{~#assign "yearRoot"}}../{{/assign~}}
        {{~#assign "monthRoot"}}./{{/assign~}}
    {{~/eq}}
    <meta charset="utf-8"/>
    <link href="{{siteRoot}}archive-style.css" rel="stylesheet" type="text/css"/>
    <title>{{groupName}} - {{monthName yearMonth.month}} {{yearMonth.year}}</title>
</head>
<body class="month-index">
<div class="archive-nav">
    <nav class="site-menu">
        <ul>
            <li class="site-root"><a href="{{siteRoot}}"><span class="site-name">{{site.name}}</span> - Home</a></li>
            <li class="parent-site"><a href="{{site.parentSiteUrl}}"><span class="parent-site-name">{{site.parentSiteName}}</span></a></li>
        </ul>
    </nav>
    <nav class="group-nav">
        <ul>
            <li class="group-root"><a href="{{groupRoot}}"><span class="group-name">{{groupName}}</span></a></li>
            <li class="group-year"><a href="{{yearRoot}}"><span class="group-name">{{groupName}}</span> - <span class="year">{{yearMonth.year}}</span></a></li>
        </ul>
    </nav>
</div>
<div class="main-content">
    <h1><span class="group-name">{{groupName}}</span> - <span class="month-name">{{monthName yearMonth.month}}</span> <span class="year">{{yearMonth.year}}</span></h1>
    <nav class="group-month-nav content-nav-top">
        <ul>
            <li class="previous previous-month">
                {{~#with monthNavigation.previous~}}
                    <a href="{{groupRoot}}{{this.year}}/{{this.month}}/">previous month (<span class="month-name">{{monthName this.month}}</span> <span class="year">{{this.year}}</span>)</a>
                {{~else~}}
                    <span>previous month</span>
                {{~/with~}}
            </li>
            <li class="next next-month">
                {{~#with monthNavigation.next~}}
                    <a href="{{groupRoot}}{{this.year}}/{{this.month}}/">next month (<span class="month-name">{{monthName this.month}}</span> <span class="year">{{this.year}}</span>)</a>
                {{~else~}}
                    <span>next month</span>
                {{~/with~}}
            </li>
        </ul>
    </nav>
    <ul class="msg-list">
        {{~#each posts}}
        <li><a href="{{monthRoot}}{{messageId}}.html"><span class="subject">{{{subject}}}</span> <span class="author">{{{authorName}}}</span></a></li>
        {{~/each}}
    </ul>
    <nav class="group-month-nav content-nav-bottom">
        <ul>
            <li class="previous previous-month">
                {{~#with monthNavigation.previous~}}
                    <a href="{{groupRoot}}{{this.year}}/{{this.month}}/">previous month (<span class="month-name">{{monthName this.month}}</span> <span class="year">{{this.year}}</span>)</a>
                {{~else~}}
                    <span>previous month</span>
                {{~/with~}}
            </li>
            <li class="next next-month">
                {{~#with monthNavigation.next~}}
                    <a href="{{groupRoot}}{{this.year}}/{{this.month}}/">next month (<span class="month-name">{{monthName this.month}}</span> <span class="year">{{this.year}}</span>)</a>
                {{~else~}}
                    <span>next month</span>
                {{~/with~}}
            </li>
        </ul>
    </nav>
</div>
</body>
</html>