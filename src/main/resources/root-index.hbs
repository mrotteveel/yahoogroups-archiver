<!DOCTYPE html>
<html lang="{{site.lang}}">
<head>
    {{~#assign "siteRoot"}}{{#eq site.useAbsolutePaths 'true'}}{{site.baseUrl}}{{else}}./{{/eq}}{{/assign}}
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="{{siteRoot}}archive-style.css" rel="stylesheet" type="text/css"/>
    <title>{{site.name}}</title>
</head>
<body id="root-index" class="d-flex flex-column h-100">
<header class="archive-nav">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark site-menu">
        <ul class="navbar-nav">
            <li class="nav-item active site-root"><a class="nav-link" href="{{siteRoot}}"><span class="site-name">{{site.name}}</span> - Home</a></li>
            <li class="nav-item parent-site"><a class="nav-link" href="{{site.parentSiteUrl}}"><span class="site-name">{{site.parentSiteName}}</span></a></li>
        </ul>
    </nav>
</header>
<main role="main" class="flex-shrink-0">
    <div class="container">
        <h1><span class="site-name">{{site.name}}</span></h1>
        <p>
            {{site.introduction}}
        </p>
        <div class="groups">
            <h2>Groups</h2>
            <ul class="group-list">
                {{~#each groups}}
                <li class="group-name"><a href="{{siteRoot}}{{this}}"><span class="group-name">{{this}}</span></a></li>
                {{~/each}}
            </ul>
        </div>
    </div>
</main>
</body>
</html>