<!DOCTYPE html>
<html lang="{{site.lang}}">
<head>
    {{~#assign "siteRoot"}}{{#eq site.useAbsolutePaths 'true'}}{{site.baseUrl}}{{else}}./{{/eq}}{{/assign}}
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="{{siteRoot}}archive-style.css" rel="stylesheet" type="text/css"/>
    {{~#if site.generateCanonicalLink}}
    <link rel="canonical" href="{{site.canonicalBaseUrl}}"/>
    {{~/if}}
    <title>{{site.name}}</title>
</head>
<body id="root-index" class="d-flex flex-column h-100">
<header class="archive-nav">
    <nav class="navbar navbar-expand-lg bg-dark site-menu" data-bs-theme="dark">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item site-root"><a class="nav-link active" href="{{siteRoot}}"><span class="site-name">{{site.name}}</span> - Home</a></li>
                <li class="nav-item parent-site"><a class="nav-link" href="{{site.parentSiteUrl}}"><span class="site-name">{{site.parentSiteName}}</span></a></li>
            </ul>
        </div>
    </nav>
</header>
<main role="main" class="flex-shrink-0">
    <div class="container">
        <h1><span class="site-name">{{site.name}}</span></h1>
        <p>
            {{site.introduction}}
        </p>
        <div class="groups">
            <h2>Groups</h2>
            <ul class="list-unstyled group-list">
                {{~#each groups}}
                <li class="group-name"><a href="{{siteRoot}}{{this}}/index.html"><span class="group-name">{{this}}</span></a></li>
                {{~/each}}
            </ul>
        </div>
    </div>
</main>
</body>
</html>