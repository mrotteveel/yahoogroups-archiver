<!DOCTYPE html>
<html lang="{{site.lang}}">
<head>
    {{~#eq site.useAbsolutePaths 'true'~}}
        {{~#assign "siteRoot"}}{{site.baseUrl}}{{/assign~}}
        {{~#assign "groupRoot"}}{{siteRoot}}{{groupName}}/{{/assign~}}
        {{~#assign "yearRoot"}}{{groupRoot}}{{year}}/{{/assign~}}
    {{~else~}}
        {{~#assign "siteRoot"}}../../{{/assign~}}
        {{~#assign "groupRoot"}}../{{/assign~}}
        {{~#assign "yearRoot"}}./{{/assign~}}
    {{~/eq}}
    <meta charset="utf-8"/>
    <link href="{{siteRoot}}archive-style.css" rel="stylesheet" type="text/css"/>
    <title>{{groupName}} - {{year}}</title>
</head>
<body class="year-index">
<div class="archive-nav">
    <nav class="site-menu">
        <ul>
            <li class="site-root"><a href="{{siteRoot}}"><span class="site-name">{{site.name}}</span> - Home</a></li>
            <li class="parent-site"><a href="{{site.parentSiteUrl}}"><span class="site-name">{{site.parentSiteName}}</span></a></li>
        </ul>
    </nav>
    <nav class="group-nav">
        <ul>
            <li class="group-root"><a href="{{groupRoot}}"><span class="group-name">{{groupName}}</span></a></li>
        </ul>
    </nav>
</div>
<div class="main-content">
    <h1><span class="group-name">{{groupName}}</span> - <span class="year">{{year}}</span></h1>
    <nav class="group-year-nav content-nav-top">
        <ul>
            <li class="previous previous-year">
                {{~#with yearNavigation.previous~}}
                    <a href="{{groupRoot}}{{this}}/">previous year (<span class="year">{{this}}</span>)</a>
                {{~else~}}
                    <span>previous year</span>
                {{~/with~}}
            </li>
            <li class="next next-year">
                {{~#with yearNavigation.next~}}
                    <a href="{{groupRoot}}{{this}}/">next year (<span class="year">{{this}}</span>)</a>
                {{~else~}}
                    <span>next year</span>
                {{~/with~}}
            </li>
        </ul>
    </nav>
    <div class="months">
        <table class="year-month-index">
            <colgroup>
                <col class="month">
                <col class="post-count">
            </colgroup>
            <tr>
                <th class="month">Month</th>
                <th class="post-count">Posts</th>
            </tr>
            {{~#*inline "month-row"}}
            <tr>
                <td class="month">
                    {{~#with post~}}
                        <a href="{{yearRoot}}{{yearMonth.month}}/">{{monthName month}} {{year}}</a>
                    {{~else~}}
                        {{monthName month}} {{year}}
                    {{~/with~}}
                </td>
                <td class="post-count">{{post.postCount}}</td>
            </tr>
            {{~/inline~}}
            {{> month-row post=posts.[1] month=1 ~}}
            {{> month-row post=posts.[2] month=2 ~}}
            {{> month-row post=posts.[3] month=3 ~}}
            {{> month-row post=posts.[4] month=4 ~}}
            {{> month-row post=posts.[5] month=5 ~}}
            {{> month-row post=posts.[6] month=6 ~}}
            {{> month-row post=posts.[7] month=7 ~}}
            {{> month-row post=posts.[8] month=8 ~}}
            {{> month-row post=posts.[9] month=9 ~}}
            {{> month-row post=posts.[10] month=10 ~}}
            {{> month-row post=posts.[11] month=11 ~}}
            {{> month-row post=posts.[12] month=12 }}
        </table>
    </div>
    <nav class="group-year-nav content-nav-bottom">
        <ul>
            <li class="previous previous-year">
                {{~#with yearNavigation.previous~}}
                    <a href="{{groupRoot}}{{this}}/">previous year (<span class="year">{{this}}</span>)</a>
                {{~else~}}
                    <span>previous year</span>
                {{~/with~}}
            </li>
            <li class="next next-year">
                {{~#with yearNavigation.next~}}
                    <a href="{{groupRoot}}{{this}}/">next year (<span class="year">{{this}}</span>)</a>
                {{~else~}}
                    <span>next year</span>
                {{~/with~}}
            </li>
        </ul>
    </nav>
</div>
</body>
</html>